{{> header title=title authed=false }}

<main class="d-flex flex-column flex-grow-1">
  <div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
      <h1 class="h3 mb-0">family tree</h1>
      <form method="POST" action="/family/logout" class="mb-0">
        <button type="submit" class="btn btn-outline-danger btn-sm">
          sign out
        </button>
      </form>
    </div>

    <div class="row">
      <div class="col-12">
        <!-- d3 visualization placeholder -->
        <div id="family-tree-canvas" class="border rounded bg-white shadow-sm"
             style="height:70vh; min-height:400px;">
          <!-- your d3 code will populate this -->
        </div>
      </div>
    </div>

    <hr class="my-5">

    <div class="row">
      <div class="col-12">
        <h2 class="h5 mb-3">example data</h2>
        <div class="table-responsive">
          <table class="table table-striped table-hover align-middle">
            <thead class="table-light">
              <tr>
                <th>first name</th>
                <th>last name</th>
                <th>relation</th>
                <th>notes</th>
              </tr>
            </thead>
            <tbody>
              <tr>
                <td>alex</td>
                <td>example</td>
                <td>parent</td>
                <td>placeholder row</td>
              </tr>
              <tr>
                <td>jamie</td>
                <td>example</td>
                <td>parent</td>
                <td>placeholder row</td>
              </tr>
              <tr>
                <td>casey</td>
                <td>example</td>
                <td>child</td>
                <td>placeholder row</td>
              </tr>
              <tr>
                <td>riley</td>
                <td>example</td>
                <td>sibling</td>
                <td>placeholder row</td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</main>

{{> footer }}