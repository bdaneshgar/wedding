    var introImages = introSection.querySelectorAll('[data-intro-image]');
    if (!introImages.length) {
      return;
    }

    var activateSlides = function () {
      introImages.forEach(function (img) {
        img.classList.add('intro-image-active');
      });
    };

    if (!('IntersectionObserver' in window)) {
      window.setTimeout(activateSlides, 1000);
      return;
    }

    var triggered = false;
    var fallbackTimer = window.setTimeout(function () {
      if (!triggered) {
        triggered = true;
        activateSlides();
      }
    }, 2500);

    var observer = new IntersectionObserver(function (entries) {
      entries.forEach(function (entry) {
        if (entry.isIntersecting && !triggered) {
          triggered = true;
          window.clearTimeout(fallbackTimer);
          window.setTimeout(activateSlides, 300);
          observer.disconnect();
        }
      });
    }, { threshold: 0.3, rootMargin: '0px 0px -15%' });

    observer.observe(introSection);
  });
</script>
